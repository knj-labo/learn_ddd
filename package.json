{
  "private": true,
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "backend": "npm workspace backend",
    "frontend": "npm workspace frontend",
    "format:prisma": "npm run format -w backend",
    "format:fix": "npm run format:backend -- --write --cache && npm run format:frontend -- --write --cache ",
    "format": "npm run format:backend && npm run format:frontend",
    "format:backend": "prettier --check --ignore-path server/.gitignore backend/**/*.{js,ts}",
    "format:frontend": "prettier --check --ignore-path client/.gitignore frontend/**/*.{ts,tsx,css}",
    "prepare": "husky install",
    "lint-staged": "lint-staged"
  },
  "lint-staged": {
    "backend/*.{ts,jsx,tsx}": [
      "npx eslint . --fix",
      "npx prettier --write ."
    ],
    "frontend/*.{ts,jsx,tsx}": [
      "npx eslint . --fix",
      "npx prettier --write ."
    ]
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.30.6",
    "@typescript-eslint/parser": "^5.30.6",
    "eslint": "^8.20.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.6.0",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "8.0.1",
    "lint-staged": "13.0.3",
    "prettier": "2.7.1"
  }
}
